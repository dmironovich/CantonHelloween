<body>
    <div class="game-container">
        <div class="header">
            <h1>ðŸŽƒ Pumpkin Runner</h1>
            <p>Collect pumpkins while avoiding obstacles! Jump with SPACE or UP arrow</p>
        </div>
        
        <div class="screens">
            <!-- Name Input Screen -->
            <div id="name-screen" class="screen active">
                <div class="name-input">
                    <h2>Enter Your Name</h2>
                    <input type="text" id="player-name" placeholder="Your name here..." maxlength="15">
                    <button id="start-btn" class="btn">Start Game</button>
                </div>
                <div class="instructions">
                    <p>Use <strong>SPACE</strong> or <strong>UP arrow</strong> to jump and collect pumpkins!</p>
                </div>
            </div>
            
            <!-- Game Screen -->
            <div id="game-screen" class="screen">
                <div class="game-area">
                    <div class="player" id="player">L</div>
                    <div class="ground"></div>
                    <div class="game-over" id="game-over">
                        <h2>Game Over!</h2>
                        <div class="final-score">Pumpkins Collected: <span id="final-pumpkins">0</span></div>
                        <button id="restart-btn" class="btn">Play Again</button>
                    </div>
                </div>
                
                <div class="game-ui">
                    <div class="score-display">Score: <span id="score">0</span></div>
                    <div class="pumpkin-count">Pumpkins: <span id="pumpkin-count">0</span></div>
                </div>
                
                <div class="leaderboard">
                    <h2>Leaderboard</h2>
                    <table class="leaderboard-table">
                        <thead>
                            <tr>
                                <th class="rank">Rank</th>
                                <th>Player</th>
                                <th>Pumpkins</th>
                            </tr>
                        </thead>
                        <tbody id="leaderboard-body">
                            <!-- Leaderboard entries will be added here -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Game elements
        const nameScreen = document.getElementById('name-screen');
        const gameScreen = document.getElementById('game-screen');
        const playerNameInput = document.getElementById('player-name');
        const startBtn = document.getElementById('start-btn');
        const restartBtn = document.getElementById('restart-btn');
        const player = document.getElementById('player');
        const gameArea = document.querySelector('.game-area');
        const gameOverScreen = document.getElementById('game-over');
        const scoreDisplay = document.getElementById('score');
        const pumpkinCountDisplay = document.getElementById('pumpkin-count');
        const finalPumpkinsDisplay = document.getElementById('final-pumpkins');
        const leaderboardBody = document.getElementById('leaderboard-body');
        
        // Game state
        let gameRunning = false;
        let score = 0;
        let pumpkinCount = 0;
        let playerName = '';
        let isJumping = false;
        let obstacles = [];
        let pumpkins = [];
        let gameSpeed = 5;
        let leaderboard = JSON.parse(localStorage.getItem('pumpkinLeaderboard')) || [];
        
        // Initialize leaderboard
        updateLeaderboard();
        
        // Event listeners
        startBtn.addEventListener('click', startGame);
        restartBtn.addEventListener('click', restartGame);
        document.addEventListener('keydown', handleKeyPress);
        
        function startGame() {
            playerName = playerNameInput.value.trim() || 'Anonymous';
            nameScreen.classList.remove('active');
            gameScreen.classList.add('active');
            resetGame();
            gameRunning = true;
            gameLoop();
            spawnPumpkin();
        }
        
        function restartGame() {
            gameOverScreen.style.display = 'none';
            resetGame();
            gameRunning = true;
            gameLoop();
            spawnPumpkin();
        }
        
        function resetGame() {
            score = 0;
            pumpkinCount = 0;
            gameSpeed = 5;
            obstacles = [];
            pumpkins = [];
            isJumping = false;
            player.style.bottom = '40px';
            scoreDisplay.textContent = '0';
            pumpkinCountDisplay.textContent = '0';
            
            // Clear existing obstacles and pumpkins
            document.querySelectorAll('.obstacle, .pumpkin').forEach(el => el.remove());
        }
        
        function gameLoop() {
            if (!gameRunning) return;
            
            // Update score
            score += 1;
            scoreDisplay.textContent = score;
            
            // Increase game speed over time
            if (score % 500 === 0) {
                gameSpeed += 0.5;
            }
            
            // Spawn obstacles randomly
            if (Math.random() < 0.02) {
                spawnObstacle();
            }
            
            // Move obstacles
            moveObstacles();
            
            // Move pumpkins
            movePumpkins();
            
            // Check collisions
            checkCollisions();
            
            requestAnimationFrame(gameLoop);
        }
        
        function spawnObstacle() {
            const obstacle = document.createElement('div');
            obstacle.classList.add('obstacle');
            obstacle.style.position = 'absolute';
            obstacle.style.bottom = '40px';
            obstacle.style.right = '-30px';
            obstacle.style.width = '20px';
            obstacle.style.height = '40px';
            obstacle.style.backgroundColor = '#795548';
            obstacle.style.borderRadius = '5px';
            gameArea.appendChild(obstacle);
            obstacles.push(obstacle);
        }
        
        function spawnPumpkin() {
            if (!gameRunning) return;
            
            const pumpkin = document.createElement('div');
            pumpkin.classList.add('pumpkin');
            
            // Random height between 80px and 180px from ground
            const minHeight = 80;
            const maxHeight = 180;
            const randomHeight = Math.floor(Math.random() * (maxHeight - minHeight + 1)) + minHeight;
            
            pumpkin.style.bottom = `${randomHeight}px`;
            pumpkin.style.right = '-40px';
            
            gameArea.appendChild(pumpkin);
            pumpkins.push(pumpkin);
            
            // Schedule next pumpkin spawn (1-3 seconds)
            const nextSpawn = 1000 + Math.random() * 2000;
            setTimeout(spawnPumpkin, nextSpawn);
        }
        
        function moveObstacles() {
            for (let i = obstacles.length - 1; i >= 0; i--) {
                const obstacle = obstacles[i];
                const currentRight = parseInt(obstacle.style.right) || 0;
                obstacle.style.right = (currentRight + gameSpeed) + 'px';
                
                // Remove obstacles that are off screen
                if (currentRight > gameArea.offsetWidth) {
                    obstacle.remove();
                    obstacles.splice(i, 1);
                }
            }
        }
        
        function movePumpkins() {
            for (let i = pumpkins.length - 1; i >= 0; i--) {
                const pumpkin = pumpkins[i];
                const currentRight = parseInt(pumpkin.style.right) || 0;
                pumpkin.style.right = (currentRight + gameSpeed) + 'px';
                
                // Remove pumpkins that are off screen
                if (currentRight > gameArea.offsetWidth) {
                    pumpkin.remove();
                    pumpkins.splice(i, 1);
                }
            }
        }
        
        function handleKeyPress(e) {
            if ((e.code === 'Space' || e.code === 'ArrowUp') && !isJumping && gameRunning) {
                jump();
            }
        }
        
        function jump() {
            if (isJumping) return;
            
            isJumping = true;
            let jumpHeight = 0;
            const jumpSpeed = 20;
            const gravity = 1.2;
            let velocity = 18;
            
            const jumpInterval = setInterval(() => {
                velocity -= gravity;
                jumpHeight += velocity;
                
                if (jumpHeight <= 0) {
                    jumpHeight = 0;
                    clearInterval(jumpInterval);
                    isJumping = false;
                    player.style.bottom = '40px';
                } else {
                    player.style.bottom = (40 + jumpHeight) + 'px';
                }
            }, 20);
        }
        
        function checkCollisions() {
            const playerRect = player.getBoundingClientRect();
            
            // Check obstacle collisions
            for (const obstacle of obstacles) {
                const obstacleRect = obstacle.getBoundingClientRect();
                if (
                    playerRect.left < obstacleRect.right &&
                    playerRect.right > obstacleRect.left &&
                    playerRect.top < obstacleRect.bottom &&
                    playerRect.bottom > obstacleRect.top
                ) {
                    endGame();
                    return;
                }
            }
            
            // Check pumpkin collisions
            for (let i = pumpkins.length - 1; i >= 0; i--) {
                const pumpkin = pumpkins[i];
                const pumpkinRect = pumpkin.getBoundingClientRect();
                
                if (
                    playerRect.left < pumpkinRect.right &&
                    playerRect.right > pumpkinRect.left &&
                    playerRect.top < pumpkinRect.bottom &&
                    playerRect.bottom > pumpkinRect.top
                ) {
                    // Collect pumpkin
                    pumpkin.remove();
                    pumpkins.splice(i, 1);
                    pumpkinCount++;
                    pumpkinCountDisplay.textContent = pumpkinCount;
                }
            }
        }
        
        function endGame() {
            gameRunning = false;
            finalPumpkinsDisplay.textContent = pumpkinCount;
            gameOverScreen.style.display = 'flex';
            
            // Add to leaderboard
            addToLeaderboard();
        }
        
        function addToLeaderboard() {
            leaderboard.push({
                name: playerName,
                pumpkins: pumpkinCount
            });
            
            // Sort by pumpkins (descending)
            leaderboard.sort((a, b) => b.pumpkins - a.pumpkins);
            
            // Keep only top 10
            if (leaderboard.length > 10) {
                leaderboard = leaderboard.slice(0, 10);
            }
            
            // Save to localStorage
            localStorage.setItem('pumpkinLeaderboard', JSON.stringify(leaderboard));
            
            // Update display
            updateLeaderboard();
        }
        
        function updateLeaderboard() {
            leaderboardBody.innerHTML = '';
            
            if (leaderboard.length === 0) {
                const row = document.createElement('tr');
                row.innerHTML = '<td colspan="3" style="text-align:center; padding:15px;">No scores yet</td>';
                leaderboardBody.appendChild(row);
                return;
            }
            
            leaderboard.forEach((entry, index) => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td class="rank">${index + 1}</td>
                    <td>${entry.name}</td>
                    <td>${entry.pumpkins}</td>
                `;
                leaderboardBody.appendChild(row);
            });
        }
    </script>
</body>
</html>
```
