        }
        
        .btn:active {
            transform: translateY(1px);
        }
        
        .game-area {
            position: relative;
            width: 100%;
            height: 300px;
            background: linear-gradient(to bottom, #87CEEB, #E0F7FA);
            border-radius: 15px;
